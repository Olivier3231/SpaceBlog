{% extends 'base.html.twig' %}

{% block title %}Page Article{% endblock %}

{% block body %}
<div class="container">
    <a href="{{path('home')}}" class="back_button p-1">Retour</a>
    <div class="container m-3">
            <div class="card_article">
                    <img src="{{ article.cover }}" class="card-img-top2" alt="{{article.title}} illustration">
                    <h5 class="card-title2">{{article.title}}</h5>
                    <p class="card-text2">{{article.content}}</p>
            </div>
    </div>
</div>   
{% endblock %}