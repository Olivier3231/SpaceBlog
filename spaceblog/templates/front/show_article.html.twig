{% extends 'base.html.twig' %}

{% block title %}Page Article{% endblock %}

{% block body %}
<div class="container">
    <h1>SpaceBlog</h1>
    <a href="{{path('home')}}" class="back_button p-1">Retour</a>
    <div class="container m-3">
            <div class="card_article">
                    <img src="{{ article.cover }}" class="card-img-top" alt="{{article.title}} illustration">
                    <h5 class="card-title">{{article.title}}</h5>
                    <p class="card-text">{{article.content}}</p>
                <div class="card-footer">
                    <small>{{article.createdAt|date('y-m-d')}}</small>
                </div>
            </div>
    </div>
</div>   
{% endblock %}